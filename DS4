#include <iostream>
using namespace std;

class Node {
public:
    string task_name;
    int priority;
    int exe_time;
    Node* next;

    Node(string task, int p, int exe) {
        task_name = task;
        priority = p;
        exe_time = exe;
        next = NULL;
    }

    void display() {
        cout << "Task Name: " << task_name
             << " | Priority: " << priority
             << " | Execution Time: " << exe_time << "ms" << endl;
    }
};

void insert(Node*& head, Node* newNode) {
    if (head == NULL || newNode->priority > head->priority) {
        newNode->next = head;
        head = newNode;
        return;
    }

    Node* temp = head;
    while (temp->next != NULL && temp->next->priority >= newNode->priority) {
        temp = temp->next;
    }

    newNode->next = temp->next;
    temp->next = newNode;
}

int main() {
    Node* head = NULL;
    int n;

    cout << "Enter the number of tasks: ";
    cin >> n;

    for (int i = 0; i < n; i++) {
        string t;
        int pr, ex;
        cout << "\nTask " << i + 1 << ":\n";
        cout << "Task Name: ";
        cin >> t;
        cout << "Priority: ";
        cin >> pr;
        cout << "Execution Time (ms): ";
        cin >> ex;

        Node* newNode = new Node(t, pr, ex);
        insert(head, newNode);
    }

    cout << "\nScheduled Tasks (By Priority):\n";
    Node* temp = head;
    while (temp != NULL) {
        temp->display();
        temp = temp->next;
    }

    return 0;
}



